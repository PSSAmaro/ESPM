@model IEnumerable<ESPM.Areas.Gestao.Models.AutorizacaoViewModel>

@{
    ViewBag.Title = "Autorizações";
}

<h2>Aplicações autorizadas</h2>

<p>
    @Html.ActionLink("Nova aplicação", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Validade
        </th>
        <th>
            Utilizador
        </th>
        <th>
            Aplicação
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Validade)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Utilizador)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Aplicacao)
        </td>
        <td>
            @Html.ActionLink("Bloquear", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
